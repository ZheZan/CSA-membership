<html>
  <head>
      <style>
           fieldset {
           border: 2px solid grey;
           width: 1140px;   
           padding: 1em;
           }
    </style>
  </head>
  
  
<body>
<h1>Report</h1>
<form action=report method="get" id="userform">
<fieldset>
<legend>Choose groups you want:</legend>
<label for="classification">Classification:</label>
<select name=classification[] form="userform" multiple="multiple">
  <% @classificationlist.each_value do |classification| %>
         <option value="<%= classification %>"><%= classification %></option>
    <% end %>
  <option>Cmd for Multi-Choice</option>
</select>

&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<label for="dynasty">Dynasty:</label>
<select name=dynasty[] form="userform" multiple="multiple">
    <% @dynastylist.each_value do |dynasty| %>
         <option value="<%= dynasty %>"><%= dynasty %></option>
    <% end %>
  <option>Cmd for Multi-Choice</option>
</select>

&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<input name=search type="Submit" value="Search">
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<input name=reset type="Submit" value="Reset">
</form>
</fieldset>

&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<fieldset>
<h2 class="sub-header">Detail</h2>
<div class="table-responsive">
<table class="table table-striped">
<thead>
    <tr>
      <th>Name</th>
      <th>Uin</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Membership</th>
      <th>Shirt</th>
      <th>Classification</th>
      <th>Dynasty</th>
      <th>Points</th>

      <th colspan="3"></th>
    </tr>
</thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.uin %></td>
        <td><%= user.tel %></td>
        <td><%= user.email %></td>
        <td><%= user.membership %></td>
        <td><%= user.shirt %></td>
        <td><%= user.classification %></td>
        <td><%= user.dynasty %></td>
        <td><%= user.points %></td>
      </tr>
    <% end %>
  </tbody>

  <tbody>
    <% @report.each do |report| %>
      <tr>
        <td><%= report[0] %></td>
        <td><%= '' %></td>
        <td><%= '' %></td>
        <td><%= '' %></td>
        <td><%= '' %></td>
        <td><%= '' %></td>
        <td><%= '' %></td>
        <td><%= '' %></td>                        
        <td><%= report[1]%></td>
      </tr>
    <% end %>
  </tbody>

</table>
</fieldset>

<br>
<br>
<p class="btn btn-default" role="button"><%= link_to "Back to Dashborad", static_pages_adminhome_path %></p>
