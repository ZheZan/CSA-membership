  </thead>

  <tbody>
    <% @eventusers.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.uin %></td>
        <td><%= user.tel %></td>
        <td><%= user.email %></td>
        <td><%= user.membership %></td>
        <td><%= user.shirt %></td>
        <td><%= user.classification %></td>
        <td><%= user.dynasty %></td>
        <td><%= user.points %></td>
      </tr>
    <% end %> 
  </tbody>
</table>
      <%= will_paginate @eventusers %>
