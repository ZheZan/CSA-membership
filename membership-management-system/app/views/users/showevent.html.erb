<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Semester</th>
      <th>Category</th>
      <th>Points</th>
      <th>TimeStamp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @userevents.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.year %></td>
        <td><%= event.semester %></td>
        <td><%= event.category %></td>
        <td><%= "+" %><%= @point[event.id] %></td>
        <td><%= event.datetime %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @userevents %>
<br>
<p class="btn btn-default" role="button"><%= link_to 'Back', user_path(@user) %></p>